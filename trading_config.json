{
  "api": {
    "zerodha": {
      "api_key": "",
      "api_secret": "",
      "token_file": "~/.config/trading-system/zerodha_token.json",
      "request_delay": 0.25
    }
  },
  "dashboard": {
    "port": 8080,
    "host": "localhost",
    "auto_open_browser": true
  },
  "trading": {
    "default_capital": 1000000,
    "risk_per_trade": 0.02,
    "max_positions": 10,
    "trading_hours": {
      "start": "09:15",
      "end": "15:30"
    },
    "option_chain_limit": 150,
    "option_chain_timeout": 30
  },
  "fno": {
    "indices": [
      "NIFTY",
      "BANKNIFTY",
      "FINNIFTY"
    ],
    "lot_sizes": {
      "NIFTY": 50,
      "BANKNIFTY": 15,
      "FINNIFTY": 40
    },
    "fallback_spot_prices": {
      "NIFTY": 25000,
      "BANKNIFTY": 53500,
      "FINNIFTY": 19500
    }
  },
  "logging": {
    "level": "INFO",
    "file": "trading_system.log",
    "max_size_mb": 50,
    "backup_count": 5
  },
  "directories": {
    "logs": "logs",
    "state": "state",
    "backtest_results": "backtest_results"
  }
}
