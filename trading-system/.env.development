# ==============================================================================
# DEVELOPMENT ENVIRONMENT
# ==============================================================================
# Use this for local development and testing
# ==============================================================================

#ENVIRONMENT=development
DEVELOPMENT_MODE=true
LOG_LEVEL=DEBUG

# Database - Local PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_system_dev
POSTGRES_USER=trading_user_dev
POSTGRES_PASSWORD=dev_password_changeme

# Redis - Local Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password
REDIS_DB=0

# Zerodha API - Use paper trading for development
ZERODHA_API_KEY=your_dev_api_key
ZERODHA_API_SECRET=your_dev_api_secret
TRADING_MODE=paper

# Dashboard
DASHBOARD_PORT=8080
MONITORING_PORT=8081
DASHBOARD_API_KEY=dev_dashboard_key_min_32_chars

# Security - Use weak passwords for development only
ENCRYPTION_KEY=dev-encryption-key-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production
SESSION_SECRET=dev-session-secret-change-in-production

# Features - Enable all features for development
FEATURE_ML_PREDICTIONS=true
FEATURE_ADVANCED_ALERTS=true
FEATURE_BACKTESTING=true
FEATURE_COST_OPTIMIZATION=true
FEATURE_ADVANCED_RISK_ANALYTICS=true

# Cost optimization
COST_OPTIMIZATION_ENABLED=true
CACHE_SIZE=1000
CACHE_TTL=60

# Monitoring
MONITORING_ENABLED=true
METRICS_INTERVAL=30
METRICS_RETENTION=24

# Trading parameters - Conservative for development
MAX_TRADES_PER_DAY=10
MIN_CONFIDENCE=0.80
DEFAULT_STOP_LOSS_PCT=0.01
MAX_POSITION_SIZE=1

# Alerts - Console only for development
ALERT_CHANNELS=console

# Backup - Disabled for development
BACKUP_ENABLED=false

# Docker
COMPOSE_PROJECT_NAME=trading-system-dev
