{
  "dashboard": {
    "id": null,
    "uid": "trading-activity",
    "title": "Trading Activity Dashboard",
    "tags": ["trading", "operations"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "type": "stat",
        "title": "Today's P&L",
        "targets": [
          {
            "expr": "sum(trading_pnl_total{period=\"today\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyINR",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 10000
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "horizontal"
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "type": "stat",
        "title": "Active Positions",
        "targets": [
          {
            "expr": "count(trading_position_open{status=\"open\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 3
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "type": "stat",
        "title": "Total Trades Today",
        "targets": [
          {
            "expr": "increase(trading_trades_total{period=\"today\"}[24h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "type": "stat",
        "title": "Win Rate",
        "targets": [
          {
            "expr": "100 * (sum(trading_trades_profitable_total{period=\"today\"}) / sum(trading_trades_total{period=\"today\"}))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "green",
                  "value": 60
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "type": "timeseries",
        "title": "P&L Over Time",
        "targets": [
          {
            "expr": "trading_pnl_total",
            "refId": "A",
            "legendFormat": "Total P&L"
          },
          {
            "expr": "trading_pnl_realized",
            "refId": "B",
            "legendFormat": "Realized P&L"
          },
          {
            "expr": "trading_pnl_unrealized",
            "refId": "C",
            "legendFormat": "Unrealized P&L"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "unit": "currencyINR"
          }
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "type": "timeseries",
        "title": "Trade Volume",
        "targets": [
          {
            "expr": "rate(trading_trades_total[5m]) * 300",
            "refId": "A",
            "legendFormat": "Trades per 5 min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 12
        },
        "type": "table",
        "title": "Active Positions",
        "targets": [
          {
            "expr": "trading_position_value{status=\"open\"}",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {},
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "currencyINR"
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "job": true,
                "instance": true
              },
              "indexByName": {
                "symbol": 0,
                "quantity": 1,
                "entry_price": 2,
                "current_price": 3,
                "Value": 4
              },
              "renameByName": {
                "symbol": "Symbol",
                "quantity": "Quantity",
                "entry_price": "Entry Price",
                "current_price": "Current Price",
                "Value": "P&L"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 12
        },
        "type": "piechart",
        "title": "Portfolio Allocation",
        "targets": [
          {
            "expr": "trading_position_value{status=\"open\"}",
            "refId": "A",
            "legendFormat": "{{symbol}}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 9,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 12
        },
        "type": "bargauge",
        "title": "Risk Metrics",
        "targets": [
          {
            "expr": "trading_risk_exposure_percentage",
            "refId": "A",
            "legendFormat": "Exposure %"
          },
          {
            "expr": "trading_risk_max_drawdown_percentage",
            "refId": "B",
            "legendFormat": "Max Drawdown %"
          },
          {
            "expr": "trading_risk_var_95_percentage",
            "refId": "C",
            "legendFormat": "VaR 95% %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 75
                }
              ]
            }
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 10,
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 20
        },
        "type": "timeseries",
        "title": "Trade Success Rate",
        "targets": [
          {
            "expr": "100 * rate(trading_trades_profitable_total[5m]) / rate(trading_trades_total[5m])",
            "refId": "A",
            "legendFormat": "Win Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 11,
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 20
        },
        "type": "timeseries",
        "title": "Average Trade Size",
        "targets": [
          {
            "expr": "avg(trading_trade_size_total)",
            "refId": "A",
            "legendFormat": "Avg Size"
          },
          {
            "expr": "max(trading_trade_size_total)",
            "refId": "B",
            "legendFormat": "Max Size"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            },
            "unit": "currencyINR"
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=\"TradingSystemAlert\"}",
          "iconColor": "red",
          "name": "Trading Alerts",
          "tagKeys": "alertname,severity",
          "textFormat": "{{alertname}}: {{description}}",
          "titleFormat": "Alert"
        }
      ]
    }
  },
  "overwrite": true
}
