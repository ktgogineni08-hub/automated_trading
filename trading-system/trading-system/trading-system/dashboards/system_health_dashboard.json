{
  "dashboard": {
    "id": null,
    "uid": "system-health",
    "title": "System Health Dashboard",
    "tags": ["health", "monitoring", "operations"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 0,
          "y": 0
        },
        "type": "stat",
        "title": "System Status",
        "targets": [
          {
            "expr": "up{job=\"trading-system\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                }
              }
            ],
            "noValue": "UNKNOWN"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 4,
          "y": 0
        },
        "type": "stat",
        "title": "Uptime",
        "targets": [
          {
            "expr": "time() - process_start_time_seconds{job=\"trading-system\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "yellow",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 3600
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 8,
          "y": 0
        },
        "type": "stat",
        "title": "Database Status",
        "targets": [
          {
            "expr": "health_check_database_up",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "HEALTHY",
                    "color": "green"
                  }
                }
              }
            ]
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 12,
          "y": 0
        },
        "type": "stat",
        "title": "Redis Status",
        "targets": [
          {
            "expr": "health_check_redis_up",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "HEALTHY",
                    "color": "green"
                  }
                }
              }
            ]
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 16,
          "y": 0
        },
        "type": "stat",
        "title": "API Status",
        "targets": [
          {
            "expr": "health_check_api_up",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "HEALTHY",
                    "color": "green"
                  }
                }
              }
            ]
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 4,
          "w": 4,
          "x": 20,
          "y": 0
        },
        "type": "stat",
        "title": "Active Alerts",
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 3
                }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 7,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "type": "timeseries",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "refId": "A",
            "legendFormat": "CPU Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "type": "timeseries",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
            "refId": "A",
            "legendFormat": "Memory Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "red",
                  "value": 95
                }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "type": "timeseries",
        "title": "Disk Usage",
        "targets": [
          {
            "expr": "100 * (1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}))",
            "refId": "A",
            "legendFormat": "Root Disk %"
          },
          {
            "expr": "100 * (1 - (node_filesystem_avail_bytes{mountpoint=\"/data\"} / node_filesystem_size_bytes{mountpoint=\"/data\"}))",
            "refId": "B",
            "legendFormat": "Data Disk %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "type": "timeseries",
        "title": "Network Traffic",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device!~\"lo|docker.*\"}[5m]) * 8",
            "refId": "A",
            "legendFormat": "Receive {{device}}"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|docker.*\"}[5m]) * 8 * -1",
            "refId": "B",
            "legendFormat": "Transmit {{device}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "unit": "bps"
          }
        }
      },
      {
        "id": 11,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 20
        },
        "type": "timeseries",
        "title": "Database Connections",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"trading_db\"}",
            "refId": "A",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "pg_settings_max_connections",
            "refId": "B",
            "legendFormat": "Max Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 12,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 20
        },
        "type": "timeseries",
        "title": "Redis Memory Usage",
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "refId": "A",
            "legendFormat": "Used Memory"
          },
          {
            "expr": "redis_memory_max_bytes",
            "refId": "B",
            "legendFormat": "Max Memory"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            },
            "unit": "bytes"
          }
        }
      },
      {
        "id": 13,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 20
        },
        "type": "timeseries",
        "title": "Health Check Response Time",
        "targets": [
          {
            "expr": "health_check_response_time_ms",
            "refId": "A",
            "legendFormat": "{{component}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            },
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 500
                }
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 28
        },
        "type": "table",
        "title": "Service Health Status",
        "targets": [
          {
            "expr": "health_check_component_status",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "job": true,
                "instance": true
              },
              "indexByName": {
                "component": 0,
                "status": 1,
                "response_time_ms": 2,
                "last_check": 3
              },
              "renameByName": {
                "component": "Component",
                "status": "Status",
                "response_time_ms": "Response Time (ms)",
                "last_check": "Last Check"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Status"
              },
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background",
                    "mode": "basic"
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {
                      "type": "value",
                      "options": {
                        "healthy": {
                          "color": "green",
                          "text": "HEALTHY"
                        },
                        "degraded": {
                          "color": "yellow",
                          "text": "DEGRADED"
                        },
                        "unhealthy": {
                          "color": "red",
                          "text": "UNHEALTHY"
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 15,
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 28
        },
        "type": "logs",
        "title": "Recent System Logs",
        "targets": [
          {
            "expr": "{job=\"trading-system\"} |= \"ERROR\" or \"CRITICAL\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "wrapLogMessage": true,
          "dedupStrategy": "none"
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "label": "Instance",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(up{job=\"trading-system\"}, instance)",
          "multi": false,
          "includeAll": false,
          "refresh": 1
        }
      ]
    }
  },
  "overwrite": true
}
