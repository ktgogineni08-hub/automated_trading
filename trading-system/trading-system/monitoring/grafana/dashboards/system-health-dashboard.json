{
  "dashboard": {
    "title": "Trading System - System Health",
    "tags": ["infrastructure", "health", "monitoring"],
    "timezone": "Asia/Kolkata",
    "refresh": "15s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Trading System Status",
        "gridPos": {"h": 3, "w": 4, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"trading-system\"}",
            "legendFormat": "Status"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ]
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "PostgreSQL Primary",
        "gridPos": {"h": 3, "w": 4, "x": 4, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"postgres-primary\"}",
            "legendFormat": "Status"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ]
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "PostgreSQL Replicas",
        "gridPos": {"h": 3, "w": 4, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "count(up{job=\"postgres-replica\"} == 1)",
            "legendFormat": "Healthy"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Redis Master",
        "gridPos": {"h": 3, "w": 4, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"redis-master\"}",
            "legendFormat": "Status"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ]
          }
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Redis Sentinel Quorum",
        "gridPos": {"h": 3, "w": 4, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "count(up{job=\"redis-sentinel\"} == 1)",
            "legendFormat": "Sentinels"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 2, "color": "yellow"},
                {"value": 3, "color": "green"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "type": "stat",
        "title": "System Uptime",
        "gridPos": {"h": 3, "w": 4, "x": 20, "y": 0},
        "targets": [
          {
            "expr": "avg(time() - process_start_time_seconds{job=\"trading-system\"})",
            "legendFormat": "Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dtdurations",
            "decimals": 0
          }
        }
      },
      {
        "id": 7,
        "type": "timeseries",
        "title": "CPU Usage",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 3},
        "targets": [
          {
            "expr": "100 * sum(rate(container_cpu_usage_seconds_total{pod=~\"trading-system.*\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Memory Usage",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 3},
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{pod=~\"trading-system.*\"}) by (pod) / (1024*1024*1024)",
            "legendFormat": "{{pod}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "unit": "decgbytes",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1.5, "color": "yellow"},
                {"value": 1.8, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "type": "timeseries",
        "title": "Network I/O",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 3},
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{pod=~\"trading-system.*\"}[5m])",
            "legendFormat": "RX {{pod}}"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{pod=~\"trading-system.*\"}[5m])",
            "legendFormat": "TX {{pod}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            },
            "unit": "Bps"
          }
        }
      },
      {
        "id": 10,
        "type": "timeseries",
        "title": "PostgreSQL Replication Lag",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 11},
        "targets": [
          {
            "expr": "pg_replication_lag_seconds",
            "legendFormat": "Replica {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            },
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 30, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "type": "timeseries",
        "title": "PostgreSQL Connections",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 11},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"trading_system\"}",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 12,
        "type": "timeseries",
        "title": "PostgreSQL Transaction Rate",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 17},
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname=\"trading_system\"}[5m])",
            "legendFormat": "Commits/sec"
          },
          {
            "expr": "rate(pg_stat_database_xact_rollback{datname=\"trading_system\"}[5m])",
            "legendFormat": "Rollbacks/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 13,
        "type": "timeseries",
        "title": "Redis Memory Usage",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 17},
        "targets": [
          {
            "expr": "redis_memory_used_bytes / (1024*1024)",
            "legendFormat": "Used Memory (MB)"
          },
          {
            "expr": "redis_memory_max_bytes / (1024*1024)",
            "legendFormat": "Max Memory (MB)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            },
            "unit": "decmbytes",
            "thresholds": {
              "mode": "percentage",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "type": "stat",
        "title": "Redis Cache Hit Ratio",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 23},
        "targets": [
          {
            "expr": "100 * redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total)",
            "legendFormat": "Hit Ratio"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 60, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            },
            "unit": "percent",
            "decimals": 1
          }
        }
      },
      {
        "id": 15,
        "type": "stat",
        "title": "Redis Keys",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 23},
        "targets": [
          {
            "expr": "sum(redis_db_keys)",
            "legendFormat": "Total Keys"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 16,
        "type": "stat",
        "title": "Redis Commands/sec",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 23},
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "Ops/sec"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 0
          }
        }
      },
      {
        "id": 17,
        "type": "stat",
        "title": "Disk Usage",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 23},
        "targets": [
          {
            "expr": "100 * (1 - node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})",
            "legendFormat": "Disk Usage"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "red"}
              ]
            },
            "unit": "percent",
            "decimals": 1
          }
        }
      },
      {
        "id": 18,
        "type": "table",
        "title": "Pod Status",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 27},
        "targets": [
          {
            "expr": "kube_pod_info{namespace=\"trading-system-prod\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "job": true, "instance": true},
              "indexByName": {
                "pod": 0,
                "node": 1,
                "phase": 2
              }
            }
          }
        ]
      },
      {
        "id": 19,
        "type": "logs",
        "title": "Recent Error Logs",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 27},
        "targets": [
          {
            "expr": "{job=\"trading-system\", level=\"ERROR\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Alerts",
          "datasource": "Prometheus",
          "iconColor": "red",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\", severity!=\"info\"}"
        },
        {
          "name": "Pod Restarts",
          "datasource": "Prometheus",
          "iconColor": "orange",
          "enable": true,
          "expr": "changes(kube_pod_container_status_restarts_total{namespace=\"trading-system-prod\"}[5m]) > 0"
        }
      ]
    }
  },
  "overwrite": true
}
